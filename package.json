{
  "name": "@callstack/nativepack",
  "version": "2.0.0-beta.1",
  "description": "A Webpack-based toolkit to build your React Native application with full support of Webpack ecosystem.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "react-native": "",
  "files": [
    "dist",
    "templates",
    "android",
    "ios",
    "commands.js",
    "callstack-nativepack.podspec",
    "!android/build",
    "!ios/build"
  ],
  "homepage": "https://github.com/callstack/nativepack",
  "repository": "github:callstack/nativepack",
  "keywords": [
    "react-native",
    "react native",
    "webpack",
    "bundle",
    "bundling",
    "metro"
  ],
  "author": "zamotany <zamotany.oss@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=12.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "del dist",
    "prepare": "npm run build && npm run prepare:website",
    "prepare:website": " cd website && npm i",
    "babel": "babel src --out-dir dist --extensions \".js,.ts\" --source-maps --ignore \"src/client/debugger-ui/**\" --ignore \"**/__tests__/**\"",
    "babel:watch": "npm run babel -- --watch",
    "tsc": "tsc",
    "tsc:build": "tsc --build tsconfig.release.json",
    "tsc:watch": "npm run tsc:build -- --watch --preserveWatchOutput",
    "webpack": "webpack -c webpack.config.js",
    "webpack:watch": "npm run webpack -- --watch",
    "copy:watch": "sleep 5 && npx cpx --watch \"dist/**\" examples/TesterApp/node_modules/@callstack/nativepack",
    "build": "npm run clean && npm run babel && npm run tsc:build && npm run webpack",
    "build:watch": "npm run clean && concurrently npm:babel:watch npm:tsc:watch npm:webpack:watch",
    "release": "release-it",
    "lint": "eslint --ext \".js,.ts\" commands.js src templates website",
    "test": "jest"
  },
  "peerDependencies": {
    "@react-native-community/cli": "*",
    "@react-native-community/cli-types": "*",
    "react-native": ">=0.63",
    "webpack": "5.x"
  },
  "dependencies": {
    "@babel/code-frame": "^7.12.13",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "babel-loader": "^8.2.2",
    "colorette": "^1.2.2",
    "dedent": "^0.7.0",
    "escape-string-regexp": "^4.0.0",
    "execa": "^5.0.0",
    "fastify": "^3.12.0",
    "fastify-express": "^0.3.2",
    "fastify-graceful-shutdown": "^3.1.0",
    "fastify-static": "^4.0.1",
    "fs-extra": "^10.0.0",
    "get-port": "^5.1.1",
    "hasha": "^5.2.2",
    "image-size": "^0.9.3",
    "loader-utils": "^2.0.0",
    "metro-inspector-proxy": "^0.64.0",
    "node-fetch": "^2.6.1",
    "open": "^8.0.2",
    "open-editor": "^3.0.0",
    "ora": "^5.3.0",
    "pretty-format": "^26.6.2",
    "schema-utils": "^3.0.0",
    "source-map": "^0.7.3",
    "split2": "^3.2.2",
    "tapable": "^2.1.1",
    "webpack-dev-middleware": "^4.1.0",
    "ws": "^7.4.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.16",
    "@babel/core": "^7.12.16",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.13",
    "@babel/plugin-proposal-optional-chaining": "^7.12.16",
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-typescript": "^7.12.16",
    "@callstack/eslint-config": "^10.2.0",
    "@react-native-community/cli": "5.0.1-alpha.1",
    "@react-native-community/cli-types": "5.0.1-alpha.1",
    "@release-it/conventional-changelog": "^2.0.1",
    "@types/babel__code-frame": "^7.0.2",
    "@types/dedent": "^0.7.0",
    "@types/express": "^4.17.11",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.28",
    "@types/node-fetch": "^2.5.8",
    "@types/split2": "^2.1.6",
    "@types/ws": "^7.4.0",
    "babel-jest": "^26.6.3",
    "concurrently": "^6.0.0",
    "css-loader": "^5.2.4",
    "del-cli": "^3.0.1",
    "eslint": "^7.20.0",
    "html-webpack-plugin": "^5.2.0",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.3.8",
    "react-native": "^0.64.0",
    "release-it": "^14.4.1",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "typescript": "^4.1.5",

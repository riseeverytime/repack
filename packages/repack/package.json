{
  "name": "@callstack/repack",
  "version": "2.5.2",
  "description": "A Webpack-based toolkit to build your React Native application with full support of Webpack ecosystem.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "react-native": "",
  "files": [
    "dist",
    "docs",
    "first-party",
    "android",
    "ios",
    "commands.js",
    "client.js",
    "assets-loader.js",
    "callstack-repack.podspec",
    "!android/build",
    "!ios/build"
  ],
  "homepage": "https://github.com/callstack/repack",
  "repository": "github:callstack/repack",
  "keywords": [
    "react-native",
    "react native",
    "webpack",
    "bundle",
    "bundling",
    "metro"
  ],
  "author": "zamotany <zamotany.oss@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14.x"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "build:js": "babel src --out-dir dist --extensions \".js,.ts\" --source-maps --ignore \"**/__tests__/**\" --delete-dir-on-start",
    "build:js:watch": "yarn build:js --watch",
    "build:ts": "tsc --emitDeclarationOnly",
    "build:ts:watch": "yarn build:ts --watch --preserveWatchOutput",
    "build": "yarn build:js && yarn build:ts",
    "docs": "typedoc",
    "lint": "eslint --ext \".js,.ts\" commands.js client.js src",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "release": "release-it"
  },
  "peerDependencies": {
    "@react-native-community/cli": "*",
    "@react-native-community/cli-types": "*",
    "react-native": ">=0.63",
    "webpack": "5.x"
  },
  "dependencies": {
    "@callstack/repack-dev-server": "^1.0.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "colorette": "^1.2.2",
    "dedent": "^0.7.0",
    "escape-string-regexp": "^4.0.0",
    "events": "^3.3.0",
    "execa": "^5.0.0",
    "fs-extra": "^10.0.0",
    "hash.js": "^1.1.7",
    "hasha": "^5.2.2",
    "image-size": "^0.9.3",
    "loader-utils": "^2.0.0",
    "lodash.throttle": "^4.1.1",
    "memfs": "^3.4.4",
    "mime-types": "^2.1.35",
    "pretty-format": "^26.6.2",
    "schema-utils": "^3.0.0",
    "shallowequal": "^1.1.0",
    "tapable": "^2.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.16",
    "@babel/core": "^7.12.16",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.13",
    "@babel/plugin-proposal-optional-chaining": "^7.12.16",
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-typescript": "^7.12.16",
    "@callstack/eslint-config": "^11.0.0",
    "@react-native-community/cli": "5.0.1-alpha.1",
    "@react-native-community/cli-types": "5.0.1-alpha.1",
    "@release-it/conventional-changelog": "^3.0.1",
    "@types/dedent": "^0.7.0",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.21",
    "@types/lodash.throttle": "^4.1.7",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^14.14.28",
    "@types/react-dom": "^17.0.7",
    "@types/shallowequal": "^1.1.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "eslint": "^7.30.0",
    "jest": "^26.6.3",
    "node-fetch": "^2.6.7",
    "react-native": "^0.64.1",
    "release-it": "^14.10.0",
    "terser-webpack-plugin": "^5.1.3",
    "typedoc": "^0.22.17",
    "typedoc-plugin-markdown": "^3.12.1",
    "typescript": "^4.1.5",
    "webpack": "^5.50.0"
  }
}
